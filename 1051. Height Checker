class Solution {
public:
    int heightChecker(vector<int>& heights) {
        int max_value = *max_element(heights.begin(), heights.end());
        vector<int> freq(max_value + 1, 0);
        for (auto h : heights) {
            freq[h]++;
        }
        int ans = 0;
        for (int i = 0, h = 1; i < heights.size(); ++i) {
            while (freq[h] == 0)
                h++;
            if (heights[i] != h)
                ans++;
            freq[h]--;
        }
        return ans;
    }
};
